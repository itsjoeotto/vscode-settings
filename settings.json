{
    "workbench.colorCustomizations": {
        "statusBar.background": "#057eff",
        "statusBar.foreground": "#ffffff"
    },
    "clock.dateFormat": "h:MM TT",
    "editor.minimap.enabled": false,
    "explorer.decorations.colors": false,
    "explorer.decorations.badges": true,
       "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Variables",
                "scope": ["variable", "variable.other.readwrite", "support.variable.property.dom", 
                    "meta.object-literal.key", "variable.other.constant"],
                "settings": {
                    "foreground": "#d9e4f0",
                }
            },
            {
                "name": "HTML Tags",
                "scope": ["entity.name.tag"],
                "settings": {
                    "foreground": "#fad73bd5",
                }
            },
            {
                "name": "HTML Elements",
                "scope": ["entity.other.attribute-name"],
                "settings": {
                    "foreground": "#f8faa0e7",
                }
            },
            {
                "name": "Strings",
                "scope": ["string.quoted", "string"],
                "settings": {
                    "foreground": "#5efd86e7",
                }
            },
        ]
    },
    "workbench.colorTheme": "One Dark Pro",
    "python.pythonPath": "/usr/local/bin/python3",
    "explorer.confirmDragAndDrop": false,
    "indentRainbow.includedLanguages": ["python"],
    "indentRainbow.excludedLanguages": [
        "javascript",
        "css",
        "html",
        "jsx",
        "json"
    ],
    "workbench.iconTheme": "vscode-icons",
    // Bracket-pair colorization
    "editor.bracketPairColorization.enabled": false, 

    // Bracket-pair guides
    "editor.guides.bracketPairsHorizontal": false,
    "editor.guides.highlightActiveBracketPair": false,

    // Indentation guides
    "editor.guides.indentation": false,
    "editor.guides.highlightActiveIndentation": false,
    "terminal.integrated.fontFamily": "MesloLGM NF",
}
